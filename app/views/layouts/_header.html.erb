<div class = 'header'>
    <h1>NearEats</h1>

    <div class="nav">
    
        <!-- ハンバーガーメニューの表示・非表示を切り替えるチェックボックス -->
        <input id="drawer_input" class="drawer_hidden" type="checkbox">
    
        <!-- ハンバーガーアイコン -->
        <label for="drawer_input" class="drawer_open"><span></span></label>
    
        <!-- メニュー -->
        <nav class="nav_content">
        <ul class="nav_list">
            <li class="nav_item"><div class="list_item">ユーザー</div></li>
            <li class="nav_item"><div class="list_item">メインメニュー</div></li>
            <li class="nav_item">ログアウト</li>
        </ul>
        </nav>
    </div>

    <% if user_signed_in? %> <!-- ユーザーがログインしているか調べる -->
        <!-- ユーザーがログインしていた時の処理 -->

        <div class="login_status">
            <%= button_to "ログアウト", destroy_user_session_path, class: 'login_button', method: :delete %> <!-- ログアウトをする -->
        </div>
    <% else %>
        <!-- ユーザーがログインしていなかった時の処理 -->
        <div class="login_status">
            <%= button_to 'ログイン', new_user_session_path, method: :get, class: "login_button" %><!-- ログイン画面に移行する -->
            <%= button_to "サインアップ", new_user_registration_path, method: :get, class: 'signup_button' %> <!-- 新規登録画面に移行する -->
        </div>
    <% end %>
</div>